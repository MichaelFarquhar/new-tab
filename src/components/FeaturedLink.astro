---
import Favicon from "./Favicon.astro";
const { link } = Astro.props;
---

<a class="link-btn" href={link}>
    <Favicon domain={link} size={32}/>
</a>

<style lang="scss">
    .link-btn {
        border: 1px solid grey;
        border-radius: 8px;
        width: 50px;
        height: 50px;
        display: grid;
        place-items: center;

        img {
            width: 24px;
            height: 24px;
        }
    }
</style>
